<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="relation"
            type="com.piticlistudio.playednext.ui.gamerelation.overview.model.RelationOverviewModel" />

        <import type="android.view.View" />
    </data>


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{ relation.background }"
            android:padding="16dp"
            tools:background="@drawable/shape_gradient_backlog">

            <TextView
                android:id="@+id/textView"
                style="@style/AppTheme.RelationOverview.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:text="@{ relation.name }"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="To Do" />

            <TextView
                style="@style/AppTheme.RelationOverview.Count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="6dp"
                android:text="@{ `` + relation.count }"
                android:textColor="@{ relation.color }"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="15"
                tools:textColor="@color/gamerelation_backlog_color" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</layout>
